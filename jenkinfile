pipeline{
    tools{
        jdk 'myjava'
        maven 'mymaven'
    }
    
    agent none
        stages{
            stage('checkout'){
                agent any
                steps{
                    git 'https://github.com/sivarasan777/DevOpsClassCodes.git'
                }
                
            }
            stage('compile'){
                agent any
                steps{
                    sh 'mvn compile'
                }
            }
            stage ('CodeReview'){
                agent any
                steps{
                    sh 'mvn pmd:pmd'
                }
            }
            stage ('UnitTest'){
                agent any
                steps{
                    sh 'mvn test'
                }
            }
            stage ('MetricCheck'){
            agent any
            steps{
                sh 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
            }
        }
        stage ('Package'){
        agent any
        steps{
            sh 'mvn package'
        }
    }
    
}
}
        
        
